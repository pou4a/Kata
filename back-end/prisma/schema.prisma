generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  price  Int
  offers Offer[]
}

model Offer {
  id         Int     @id @default(autoincrement())
  product    Product @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int
  totalPrice Int

  @@unique([productId, quantity], map: "unique_offer_per_quantity")
}
